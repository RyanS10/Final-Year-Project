<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_select_destination"
    tools:context="com.example.ryans_000.iplan.SelectDestination">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where Would You Like to Go?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnPub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pub"
        android:onClick="Pub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/btnRestaurant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:onClick="Restaurant"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnPub"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/btnNightclub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nightclub"
        android:onClick="Nightclub"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnRestaurant"
        android:layout_marginTop="78dp" />

</RelativeLayout>
