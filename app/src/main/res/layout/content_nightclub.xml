<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_nightclub" tools:context="com.example.ryans_000.iplan.Nightclub">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diceys"
        android:id="@+id/btnDiceys"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/diceys"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palace"
        android:id="@+id/btnPalace"
        android:layout_below="@+id/btnDiceys"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/palace"
        android:layout_marginTop="195dp"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copper Face
Jacks"
        android:id="@+id/btnCFJ"
        android:layout_below="@+id/btnPalace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/cfj"
        android:layout_marginTop="325dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nightclubs"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

