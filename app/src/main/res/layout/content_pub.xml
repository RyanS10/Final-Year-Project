<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_pub"
    tools:context="com.example.ryans_000.iplan.Pub">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagoona"
        android:id="@+id/btnLagoona"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/lagoona"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oval"
        android:id="@+id/btnOval"
        android:layout_below="@+id/btnLagoona"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/oval"
        android:layout_marginTop="190dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Murrays"
        android:id="@+id/btnMurrays"
        android:layout_below="@+id/btnOval"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/murrays"
        android:layout_marginTop="320dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pubs"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
